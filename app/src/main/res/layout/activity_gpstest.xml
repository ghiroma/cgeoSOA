<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="unlam.cgeosoa.GPSTest"
    android:id="@+id/Layout">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLatitud"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Latitud" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLongitud"
        android:text="Longitud"
        android:layout_alignTop="@+id/txtLatitud"
        android:layout_toRightOf="@+id/txtLatitud"
        android:layout_toEndOf="@+id/txtLatitud"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtDistance"
        android:layout_below="@+id/txtLatitud"
        android:layout_alignLeft="@+id/txtLatitud"
        android:layout_alignStart="@+id/txtLatitud"
        android:layout_marginTop="56dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Map Activity"
        android:onClick="StartMapActivity"
        android:id="@+id/btnMapActivity"
        android:layout_alignTop="@+id/txtDistance"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
